# =============================================================================
# MADFAM Ecosystem Integration Environment Variables
# Copy these to your product's .env.local or .env file
# =============================================================================

# -----------------------------------------------------------------------------
# Janua SSO (Authentication)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_JANUA_API_URL="https://api.janua.madfam.io"
NEXT_PUBLIC_JANUA_CLIENT_ID="your-product-client-id"
# Get your client ID from Janua Admin: https://admin.janua.madfam.io

# -----------------------------------------------------------------------------
# MADFAM Analytics (Telemetry)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_PLAUSIBLE_DOMAIN="your-product.madfam.io"
NEXT_PUBLIC_PLAUSIBLE_HOST="https://plausible.madfam.io"
# Self-hosted Plausible instance for privacy-first analytics

# -----------------------------------------------------------------------------
# Coforma Studio (Customer Feedback)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_COFORMA_API_URL="https://api.coforma.studio"
NEXT_PUBLIC_COFORMA_API_KEY="your-coforma-api-key"
NEXT_PUBLIC_COFORMA_TENANT_ID="madfam"
NEXT_PUBLIC_COFORMA_PRODUCT_ID="your-product-id"
# Product IDs: sim4d, primavera3d, digifab-quoting, dhanam, forgesight, etc.

# -----------------------------------------------------------------------------
# Fortuna Problem Intelligence (optional)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_FORTUNA_API_URL="https://api.fortuna.tube"
NEXT_PUBLIC_FORTUNA_API_KEY="your-fortuna-api-key"

# -----------------------------------------------------------------------------
# AVALA Competency (optional - for internal tools)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_AVALA_API_URL="https://api.avala.madfam.io"
NEXT_PUBLIC_AVALA_API_KEY="your-avala-api-key"
NEXT_PUBLIC_AVALA_TENANT_ID="madfam"

# -----------------------------------------------------------------------------
# ForgeSight Pricing (optional - for quoting products)
# -----------------------------------------------------------------------------
FORGESIGHT_API_URL="https://api.forgesight.madfam.io"
FORGESIGHT_API_KEY="your-forgesight-api-key"
