{
  "name": "@madfam/ui",
  "version": "0.1.0",
  "description": "Shared UI components for the MADFAM/Solarpunk ecosystem - Golden Ratio Design System",
  "author": "MADFAM <tech@madfam.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/madfam-io/solarpunk-foundry.git",
    "directory": "packages/ui"
  },
  "homepage": "https://madfam.io",
  "bugs": {
    "url": "https://github.com/madfam-io/solarpunk-foundry/issues"
  },
  "keywords": [
    "madfam",
    "solarpunk",
    "design-system",
    "ui-components",
    "react",
    "tailwindcss",
    "golden-ratio",
    "glassmorphism"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./button": {
      "types": "./dist/components/Button.d.ts",
      "import": "./dist/components/Button.js",
      "require": "./dist/components/Button.cjs"
    },
    "./card": {
      "types": "./dist/components/Card.d.ts",
      "import": "./dist/components/Card.js",
      "require": "./dist/components/Card.cjs"
    },
    "./glass-panel": {
      "types": "./dist/components/GlassPanel.d.ts",
      "import": "./dist/components/GlassPanel.js",
      "require": "./dist/components/GlassPanel.cjs"
    },
    "./styles": "./dist/styles.css",
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "import": "./dist/tailwind.js",
      "require": "./dist/tailwind.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup && pnpm build:css",
    "build:css": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles.css --minify",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
