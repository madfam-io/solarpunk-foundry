# ============================================
# MADFAM SHARED INFRASTRUCTURE - ENV TEMPLATE
# ============================================
# Copy this file to .env in each app's root directory
# and adjust app-specific values as needed
# ============================================

# ===================
# SHARED INFRASTRUCTURE
# ===================

# PostgreSQL (Shared)
POSTGRES_HOST=madfam-postgres-shared
POSTGRES_PORT=5432
POSTGRES_USER=madfam
POSTGRES_PASSWORD=madfam_dev_password

# Redis (Shared)
REDIS_HOST=madfam-redis-shared
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_password

# MinIO/S3 (Shared)
S3_ENDPOINT=http://madfam-minio-shared:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# MailHog (Development Email)
SMTP_HOST=madfam-mailhog
SMTP_PORT=1025
SMTP_SECURE=false
EMAIL_FROM=noreply@madfam.dev

# ===================
# JANUA AUTH HUB
# ===================
JANUA_URL=http://janua-api:4000
JANUA_PUBLIC_URL=http://localhost:4000
JANUA_API_KEY=dev-api-key
JWT_SECRET=dev-shared-janua-secret-32chars!!
NEXTAUTH_SECRET=dev-shared-janua-secret-32chars!!

